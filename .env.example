# Groq API Key (free tier - 6,000 requests/min - get at https://console.groq.com)
GROQ_API_KEY=your_groq_api_key_here

# Hugging Face API Key (optional - free tier available at https://huggingface.co/settings/tokens)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# OpenAI API Key (optional - only if using OpenAI models)
OPENAI_API_KEY=your_openai_api_key_here

# MongoDB Connection (required for authentication and saving projects)
# Get free MongoDB Atlas connection at: https://www.mongodb.com/cloud/atlas
# Format: mongodb+srv://username:password@cluster.mongodb.net/dbname
MONGODB_URI=your_mongodb_connection_string_here

# NextAuth (required for authentication)
NEXTAUTH_SECRET=your_secret_key_here
NEXTAUTH_URL=http://localhost:3000

# AI API Keys (at least one required)
GROQ_API_KEY=your_groq_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Deployment API Keys (Optional - for deploying generated websites)
# GitHub Personal Access Token (for GitHub Gist deployment)
# Get from: https://github.com/settings/tokens (repo and gist scopes required)
GITHUB_PERSONAL_ACCESS_TOKEN=your_github_token_here

# Netlify Access Token (for Netlify deployment)
# Get from: https://app.netlify.com/user/applications#personal-access-tokens
NETLIFY_ACCESS_TOKEN=your_netlify_token_here

# Vercel Access Token (for Vercel deployment)
# Get from: https://vercel.com/account/tokens
VERCEL_ACCESS_TOKEN=your_vercel_token_here